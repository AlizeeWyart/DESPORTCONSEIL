
<%= link_to dashboard_path do %>
<div id="messagerie" class="dashboard-card">
    <i class="fa fa-arrow-left back-arrow" aria-hidden="true"></i>
  <h2>Messagerie</h2>
</div>
<% end %>

<% @messages.each do |message| %>
  <%= link_to message_path(message) do %>
  <div id="message-<% message.id %>" class="message-card read-<%= message.read %>">
    <img class="message-photo" src="<%= message.user.photo_url %>" alt="">
    <div class="message-details">
      <h3 style="<% if message.read %>font-weight:300<% else %>font-weight:bolder<%end%>"><%= message.user.first_name %> <%= message.user.last_name %></h3>
      <h4 style="<% if message.read %>font-weight:300<% else %>font-weight:bolder<%end%>"><%= message.title %>...</h4>
    </div>
  </div>
  <div class="separator"></div>
  <% end %>
<% end %>
